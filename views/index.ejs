<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>

        <!-- Title -->
        <title>
            ZeedStudio | Best Photography | Cinematography | Videography
        </title>
        <meta name="title" content="ZeedStudio | Best Photography | Cinematography | Videography" />
</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- /Preloader -->

    <!-- Top Search Form Area -->
    <div class="top-search-area">
        <div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <!-- Close -->
                        <button type="button" class="btn close-btn" data-dismiss="modal">
                            <i class="ti-close"></i>
                        </button>
                        <!-- Form -->
                        <form action="index.html" method="post">
                            <input type="search" name="top-search-bar" class="form-control"
                                placeholder="Search and hit enter..." />
                            <button type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Header Area Start -->
    <header class="header-area">
        <!-- Main Header Start -->
        <div class="main-header-area">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Classy Menu -->
                    <%- include('./partials/navbar',{currentTab: 'Home' }); %>
                </div>
            </div>
        </div>
    </header>
    <!-- Header Area End -->

    <!-- Welcome Area Start -->
    <section class="welcome-area">
        <div class="welcome-slides owl-carousel">
            <% for(let i=0;i<homePageInfo.images.length;i++) { %>
                <!-- Single Slide -->
                <div class="single-welcome-slide bg-img bg-overlay"
                    style="background-image: url(<%= homePageInfo.images[i] %>); height: 100vh;">
                    <div class="container h-100">
                        <div class="row h-100 align-items-center">
                            <!-- Welcome Text -->
                            <div class="col-12 col-lg-8 col-xl-6">
                                <div class="welcome-text">
                                    <h2 data-animation="bounceInDown" data-delay="900ms">
                                        <%= homePageInfo.homePageTitle %>
                                    </h2>
                                    <p data-animation="bounceInDown" data-delay="500ms">
                                        <%= homePageInfo.homePageDescription %>
                                    </p>
                                    <div class="hero-btn-group" data-animation="bounceInDown" data-delay="100ms">
                                        <a href="#" class="btn alime-btn mb-3 mb-sm-0 mr-4">Get a Quote</a>
                                        <a class="hero-mail-contact"
                                            href="mailto:hello.alime@gmail.com">hello.alime@gmail.com</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% } %>


        </div>
    </section>
    <!-- Welcome Area End -->

    <div style="width: 100%; padding: 50px 10px; text-align: center">
        <h1 style="font-family: 'Times New Roman', Times, serif">
            Our Recent Work
        </h1>
    </div>

    <!-- Recent Images section begin -->
    <div class="container-fluid">
        <div class="row alime-portfolio">
            <% for(img of recentImages) { %>
                <!-- Single Gallery Item -->
                <div class="col-12 col-sm-6 col-lg-3 single_gallery_item nature mb-30 wow fadeInUp"
                    data-wow-delay="100ms">
                    <div class="single-portfolio-content">
                        <img src="<%= img.url %>" alt="" style="
                                height: 200px;
                                overflow-y: hidden;
                                object-fit: cover;
                                border-radius: 10px;
                            " />
                        <div class="hover-content">
                            <a href="<%= img.url %>" class="portfolio-img">+</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <!-- Recent Images section end -->

    <!-- Recent Videos section begin -->
    <div class="container-fluid" style="padding: 30px">
        <div class="owl-carousel" id="recentVideos">
            <% for(vid of recentVideos) { %>
                <div class="card mx-1">
                    <div class="about-video-area wow fadeInUp" data-wow-delay="100ms">
                        <img src="<%= vid.thumbnailUrl  %>" style="overflow-y: hidden; object-fit: cover" />
                        <div class="video-icon">
                            <a href="<%= vid.url  %>" class="video-play-btn"><i class="arrow_triangle-right"></i></a>
                        </div>
                    </div>
                    <div class="card-body text-overflow-1" style="max-height: 58px">
                        <p class="card-text">
                            <%= vid.description %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <!-- Recent Videos section end -->

    <!-- Our services Us Area Start -->
    <section class="why-choose-us-area bg-gray section-padding-80-0 clearfix mt-30">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading text-center wow fadeInUp" data-wow-delay="100ms">
                        <h2 style="font-family: 'Rajdhani', sans-serif">
                            What we do?
                        </h2>
                    </div>
                </div>
            </div>

            <div class="row mb-30">
                <% for(service of services) { %>
                    <!-- Single Why Choose Area -->
                    <div class="col-md-6 col-lg-4">
                        <div class="why-choose-us-content text-center mb-80 wow fadeInUp" data-wow-delay="100ms">
                            <div class="chosse-us-icon">
                                <img src="<%= service.url %>" class="rounded-circle" style="width: 76px;height: 76px;">
                            </div>
                            <h4>
                                <%= service.title %>
                            </h4>
                            <p>
                                <%= service.description %>
                            </p>
                            <br />
                            <h3><span class="badge badge-pill badge-primary">
                                    <%= service.quotePrice %>
                                </span></h3>
                        </div>
                    </div>
                    <% } %>
            </div>

            <!-- Contact Us -->
            <div style="text-align: center; padding-bottom: 30px">
                <a href="/contact">
                    <h2 style="
                                font-family: 'Rajdhani', sans-serif;
                                color: #fc6060;
                            ">
                        Contact Us
                    </h2>
                </a>
                <h4>+91 9002516322</h4>
            </div>
        </div>
    </section>
    <!-- Our services us Area End -->

    <!-- Footer Area Start -->
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="footer-content d-flex align-items-center justify-content-between">
                        <!-- Copywrite Text -->
                        <div class="copywrite-text">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>
                                    document.write(
                                        new Date().getFullYear()
                                    );
                                </script>
                                All rights reserved | by ZeedStudio | This
                                template is made with
                                <i class="fa fa-heart-o" aria-hidden="true"></i>
                                by
                                <a href="https://colorlib.com" target="_blank">Colorlib</a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                        <!-- Footer Logo -->
                        <div class="footer-logo">
                            <a href="#"><img src="./img/logo/logo2.png" style="width: 150px" alt="" /></a>
                        </div>
                        <!-- Social Info -->
                        <div class="social-info">
                            <a target="_blank" href="https://www.facebook.com/people/Zeed-studio/100075977942375/"><i
                                    class="ti-facebook" aria-hidden="true"></i></a>
                            <a href="#"><i class="ti-twitter-alt" aria-hidden="true"></i></a>
                            <a href="https://www.instagram.com/zeedstudio__official/" target="_blank"><i
                                    class="ti-instagram" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Area End -->

    <!-- **** All JS Files ***** -->
    <%- include('./partials/scripts'); %>
        <script>
            $("#recentVideos").owlCarousel({
                items: parseInt("<%= recentVideos.length %>"),
                loop: true,
                autoplay: true,
                smartSpeed: 1000,
                autoplayTimeout: 3000,
                responsive: {
                    0: {
                        items: 1,
                    },
                    // 600: {
                    //     items: 2,
                    // },
                    // 1000: {
                    //     items: 3,
                    // }
                },
            });
        </script>
</body>

</html>